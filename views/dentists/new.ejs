<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center mb-3">New Dentist</h1>
        <div class="col-6 offset-3">
            <form class="validate-form" action="/dentists" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Dentist Name</label>
                    <input class="form-control" type="text" id="title" name="dentist[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="speciality">Speciality</label>
                    <input class="form-control" type="text" id="speciality" name="dentist[speciality]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="dentist[address]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Images</label>
                    <input type="file" class="form-control" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Dentist</button>
                </div>
            </form>
            <a href="/dentists">All Dentists</a>
        </div>
    </div>
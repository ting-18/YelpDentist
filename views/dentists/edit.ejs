<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center mb-3">Edit Dentist</h1>
    <div class="col-6 offset-3">
        <form class="validate-form" action="/dentists/<%=dentist._id%>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Dentist Name</label>
                <input class="form-control" type="text" id="title" name="dentist[title]" value="<%=dentist.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="speciality">Speciality</label>
                <input class="form-control" type="text" id="speciality" name="dentist[speciality]" value="<%= dentist.speciality %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="address">Address</label>
                <input class="form-control" type="text" id="address" name="dentist[address]" value="<%=dentist.address %>" required>
            </div>
            <div class="mb-3">                
                <label class="form-label" for="image">Images</label>
                <input type="file" class="form-control" name="image" id ="image" multiple/>
            </div>

            <div class="mb-3">
                <% dentist.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Dentist</button>
            </div>
        </form>
        <a href="/dentists">Back To Dentists</a>
    </div>
    
</div>

<% layout('layouts/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center mb-3">
        <div class="row">
            <div class="col-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1620775997990-ee3c25938b4c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxfDB8MXxyYW5kb218MHx8ZGVudGlzdHx8fHx8fDE2NzgzMDU4NjU&ixlib=rb-4.0.3&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=1080"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <h1 class="text-center mb-3">Register</h1>

                        <form class="validate-form" action="/register" method="POST" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="text" id="email" name="email">
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="text" id="password" name="password" required>
                            </div>                        
                            <div class="d-grid gap-2">
                                <button class="btn btn-success" >Register</button>
                            </div>  
                        </form>           
                    </div>
                </div>
            </div>
        </div>
    </div>